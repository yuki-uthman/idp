<% provide(:title, 'Visitor Registration') %>

<h1>Visitor Registration</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">

  <%= form_for( @visitor, url: visitors_path ) do |f| %>

    <%= render partial: 'shared/error_messages', locals: { model: @visitor } %>

    <%= hidden_field_tag :resident_id, @resident.id %>
    <%= hidden_field_tag :visitor_pass_id, @visitor_pass.id %>

    <%= f.label :name, "name" %>
    <%= f.text_field :name, class: 'form-control' %>

    <%= f.label :ic, "ic" %>
    <%= f.text_field :ic, class: 'form-control' %>

    <%= f.label :phone, "phone no." %>
    <%= f.text_field :phone, class: 'form-control' %>

    <%= f.label :email %>
    <%= f.email_field :email, class: 'form-control' %>

    <%= f.label :car, "car no. ( optional )" %>
    <%= f.text_field :car, class: 'form-control' %>

    <%= f.label :secret_key, "Secret key" %>
    <%= f.text_field :secret_key, class: 'form-control' %>

    <%= f.submit "Register", class: "btn btn-primary" %>

  <% end %>

  </div>

</div>


