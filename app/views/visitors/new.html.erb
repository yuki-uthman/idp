<% provide(:title, 'Visitor Registration') %>

<h1>Visitor Registration</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">

  <%= form_for( @visitor, url: visitors_path ) do |f| %>

    <%= render partial: 'shared/error_messages', locals: { model: @visitor } %>

    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>

    <%= f.label :ic, "IC" %>
    <%= f.text_field :ic, class: 'form-control' %>

    <%= f.label :phone, "Phone No." %>
    <%= f.text_field :phone, class: 'form-control' %>

    <%= f.label :email %>
    <%= f.email_field :email, class: 'form-control' %>

    <%= f.label :car, "Car No." %>
    <%= f.text_field :car, class: 'form-control' %>

    <%= f.label :secret_key, "Secret key" %>
    <%= f.text_field :secret_key, class: 'form-control' %>

    <%= f.submit "Register", class: "btn btn-primary" %>
  <% end %>

  </div>

</div>


