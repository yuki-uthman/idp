<% provide(:title, 'Update Resident Info') %>

<h1>Update Resident Info</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">

  <%= form_for( @resident, url: "/residents/#{@resident.floor}/#{@resident.unit}/edit" , local: true ) do |f| %>

    <%= render partial: 'shared/error_messages', locals: { model: @resident } %>
    
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>

    <%= f.label :ic, "IC" %>
    <%= f.text_field :ic, class: 'form-control' %>

    <%= f.label :phone, "Phone" %>
    <%= f.text_field :phone, class: 'form-control' %>

    <%= f.label :email %>
    <%= f.email_field :email, class: 'form-control' %>

    <%= f.submit "Update", class: "btn btn-primary" %>
  <% end %>
  </div>

</div>
